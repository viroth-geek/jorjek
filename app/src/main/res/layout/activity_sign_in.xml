<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.message.toschat.activities.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/night"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/layout_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/std_margin">

            <ImageView
                android:layout_width="@dimen/std_button_icon_width"
                android:layout_height="@dimen/std_button_icon_width"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/g"
                android:translationZ="20dp"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@drawable/white_botton" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>