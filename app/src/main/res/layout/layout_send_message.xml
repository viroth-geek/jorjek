<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/radius_you_layout"
            android:padding="5dp">
            <TextView
                android:id="@+id/titleSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello what is you name?"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/timeSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleSender"
                android:layout_toRightOf="@id/titleSender"
                android:text="10:12"
                android:textColor="@color/colorWhite"
                android:textSize="8sp" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>