<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/radius_friend_layout"
    android:padding="5dp">

    <TextView
        android:id="@+id/titleReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey! what's up you bro?"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/timeReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleReceiver"
        android:layout_toRightOf="@+id/titleReceiver"
        android:text="8:45"
        android:textColor="@color/colorWhite"
        android:textSize="8sp" />
</RelativeLayout>